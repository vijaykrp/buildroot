#!/bin/sh

start() {
	echo -n "Starting udhcpc: "
	echo 0 > /proc/sys/net/ipv6/conf/eth0/accept_ra
	echo 0 > /proc/sys/net/ipv6/conf/eth0/autoconf
	echo 1 >  /proc/sys/net/ipv6/conf/eth0/disable_ipv6
	start-stop-daemon -S -q -b -m -p /var/run/udhcpc-eth0.pid --exec /sbin/udhcpc -- -ieth0 2>&1
	sleep 2
	[ $? == 0 ] && echo "OK" || echo "FAIL"
}
stop() {
	echo -n "Stopping udhcpc: "
	start-stop-daemon -K -q -p /var/run/udhcpc-eth0.pid
	[ $? == 0 ] && echo "OK" || echo "FAIL"
	rm -rf /var/run/udhcpc.pid
}
restart() {
	stop
	sleep 3
	start
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart|reload)
		restart
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
esac

exit $?
